<div class="container">
  <h1>Tasks by Jack<h1>

      <%= link_to "Create a new Task List", new_tasks_list_path %>

      <h1>Tasks Lists</h1>
      <section class="taskslists">
        <% @lists.each do |list| %>
          <p>Title: <%= list.title %></p>
          <p>Description: <%= list.description %></p>
          <%= link_to "Edit", edit_tasks_list_path(list) %>
          <%= link_to "Delete", tasks_list_path(list), method: :delete %>
          <%= link_to "Create a new Task", new_task_path(list_id: list.id) %>

      <h3>Tasks</h3>
          <% list.tasks.each do |task| %>
            <%#<p><%= task.title %></p>%>
            <p><%= link_to task.title, task_path(task) %></p>
          <% end %>

        <% end %>

      </section>
</div>
